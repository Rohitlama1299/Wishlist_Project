# ===========================================
# ENVIRONMENT VARIABLES
# Copy this file to .env and fill in values
# ===========================================

# ===========================================
# REQUIRED VARIABLES (App will fail without these)
# ===========================================

# Database URL (required - get from Railway/Supabase)
DATABASE_URL=postgresql://username:password@host:5432/database

# JWT Secret - REQUIRED (Generate with: openssl rand -base64 64)
# Must be at least 32 characters for security
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# ===========================================
# OPTIONAL VARIABLES
# ===========================================

# App Configuration
PORT=3000
NODE_ENV=production

# Frontend URL (for CORS - required in production)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Amadeus API (optional - for city activities feature)
# Get credentials from: https://developers.amadeus.com/
AMADEUS_API_KEY=your_amadeus_api_key
AMADEUS_API_SECRET=your_amadeus_api_secret

# File Upload path (local storage)
UPLOAD_PATH=./uploads
